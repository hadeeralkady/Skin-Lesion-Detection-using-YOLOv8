    "# Step 5: Adjust Small Bounding Boxes(Preprocessing)\n",
    "\n",
    "min_box_percent = 2.0\n",
    "new_base = os.path.join(output_folder, \"adjusted_labels\")\n",
    "os.makedirs(new_base, exist_ok=True)\n",
    "folders = [\"train\", \"val\", \"test\"]\n",
    "\n",
    "def adjust_bbox(x_center, y_center, width, height, factor=2.0):\n",
    "    width *= factor\n",
    "    height *= factor\n",
    "    width = min(width, 1.0)\n",
    "    height = min(height, 1.0)\n",
    "    return x_center, y_center, width, height\n",
    "\n",
    "for folder in folders:\n",
    "    old_folder = os.path.join(output_folder, \"labels\", folder)\n",
    "    new_folder = os.path.join(new_base, folder)\n",
    "    os.makedirs(new_folder, exist_ok=True)\n",
    "    \n",
    "    if not os.path.exists(old_folder):\n",
    "        print(f\"{old_folder} does not exist\")\n",
    "        continue\n",
    "    \n",
    "    for file in os.listdir(old_folder):\n",
    "        if file.endswith(\".txt\"):\n",
    "            old_file_path = os.path.join(old_folder, file)\n",
    "            new_file_path = os.path.join(new_folder, file)\n",
    "            new_lines = []\n",
    "            \n",
    "            with open(old_file_path, \"r\") as f:\n",
    "                lines = f.readlines()\n",
    "                for line in lines:\n",
    "                    cls, x, y, w, h = line.strip().split()\n",
    "                    x, y, w, h = float(x), float(y), float(w), float(h)\n",
    "                    box_percent = w * h * 100\n",
    "                    if box_percent < min_box_percent:\n",
    "                        x, y, w, h = adjust_bbox(x, y, w, h, factor=2.0)\n",
    "                    new_lines.append(f\"{cls} {x:.6f} {y:.6f} {w:.6f} {h:.6f}\\n\")\n",
    "            \n",
    "            with open(new_file_path, \"w\") as f:\n",
    "                f.writelines(new_lines)\n",
    "\n",
    "print(f\"All small bounding boxes adjusted and saved in {new_base}!\")"
   ]
