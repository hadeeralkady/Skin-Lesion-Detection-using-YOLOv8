    "#Step 3: Visualize YOLO Boxes for Multiple \n",
    "\n",
    "num_images_to_check = 10\n",
    "image_files = [f for f in os.listdir(images_folder) if f.endswith(\".jpg\")][:num_images_to_check]\n",
    "\n",
    "for image_name in image_files:\n",
    "    image_path = os.path.join(images_folder, image_name)\n",
    "    label_path = os.path.join(labels_folder, os.path.splitext(image_name)[0] + \".txt\")\n",
    "    \n",
    "    if not os.path.exists(label_path):\n",
    "        print(f\"Label for {image_name} not found, skipping.\")\n",
    "        continue\n",
    "\n",
    "    img = cv2.imread(image_path)\n",
    "    h, w = img.shape[:2]\n",
    "\n",
    "    with open(label_path, \"r\") as f:\n",
    "        line = f.readline().strip().split()\n",
    "        if len(line) != 5:\n",
    "            print(f\"Wrong format in {label_path}, skipping.\")\n",
    "            continue\n",
    "        class_id, x_center, y_center, width_box, height_box = map(float, line)\n",
    "\n",
    "    x_center *= w\n",
    "    y_center *= h\n",
    "    width_box *= w\n",
    "    height_box *= h\n",
    "    xmin = int(x_center - width_box/2)\n",
    "    ymin = int(y_center - height_box/2)\n",
    "    xmax = int(x_center + width_box/2)\n",
    "    ymax = int(y_center + height_box/2)\n",
    "\n",
    "    cv2.rectangle(img, (xmin, ymin), (xmax, ymax), (0, 255, 0), 2)\n",
    "    cv2.imshow(f\"YOLO Box - {image_name}\", img)\n",
    "    cv2.waitKey(0)\n",
    "    cv2.destroyAllWindows()"
   ]
